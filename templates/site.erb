@<%= @name %> host <%= @fqdn %> 
    handle @<%= @name %> {
        encode gzip
        reverse_proxy <%= @upstream %> {
            <% if @host_header %>
            header_up Host <%= @host_header %>
            <% end %>
            <% if @self_signed %>
            transport http {
                tls 
                tls_insecure_skip_verify
            }
            <% end %>
        }
    }