{
    email <%= @acme_email %>
    <%- if @acme_staging %>
    acme_ca <%= @acme_staging_url %>
    <%- end %>
    <%- unless @acme_ca_root.nil? %>
    acme_ca_root <%= @acme_ca_root %>
    <%- end %>
    servers {
        metrics
    }
}

<%- @snippets.each do |name,content| %>
(<%= name %>) {
    <%= content %>
}
<%- end %>

<%- @domains.each do |domain,sites| %>
<%= domain %> {
    <%- if @dns_verfication %>
        import tls-dns
    <%- end %>
    <%- sites.each do |fqdn,content| %>
    <%= content %>
    <%- end %>
}
<% end %>
